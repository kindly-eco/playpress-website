{% include 'featured-list' %}

{% schema %}
{
  "name": "Featured list",
  "max_blocks": 9,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Add a heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "info": "Optional"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Features per row",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_signpost_link",
      "label": "Show 'view more' link",
      "default": false
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "View more"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Feature",
      "settings": [
      {
        "type": "checkbox",
        "id": "enable_image",
        "label": "Show image",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Add an optional title or tagline"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Add optional descriptve text"
      }
      ]
    }
  ]
}
{% endschema %}
