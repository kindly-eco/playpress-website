{% include 'page-promo' %}

{% schema %}
{
  "name": "Page links",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Add a heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Features per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 2
