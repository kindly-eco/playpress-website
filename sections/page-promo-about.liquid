  "blocks": [
    {
      "type": "text_block",
      "name": "Page link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Add a title or tagline"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Add descriptve text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ]
}
