<article is="article">
  <header>
    <h1>{{ article.title }}</h1>
    <span>
      By {{ article.author }}
    </span>
    <span>
      {{ article.published_at | time_tag: format: 'month_day_year' }}
    </span>
  </header>

  {{ article.content }}

  {%- if article.tags.size > 0 -%}
    <footer>
      <ul aria-label="Tags">
      {%- for tag in article.tags -%}
        <li>
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}">
            {{ tag }}
          </a>
        </li>
      {%- endfor -%}
      </ul>
    <footer>
  {%- endif -%}
</article>
