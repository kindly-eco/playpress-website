{
  "private": true,
  "name": "playpress-website",
  "version": "0.0.0",
  "description": "The website of Playpress",
  "scripts": {
    "build": "postcss src/*.css --dir assets",
    "start:theme": "shopify theme serve",
    "start:css": "postcss src/*.css --dir assets --watch",
    "start": "npm-run-all --parallel start:**",
    "check:css": "stylelint 'src/**/*.css'",
    "check:format": "prettier '**/*.{css,html,js,json,md,yml}' --check",
    "check:js": "eslint '**/*.js'",
    "check": "npm-run-all check:*",
    "pull": "shopify theme pull --nodelete",
    "push": "shopify theme push --nodelete",
    "test": "npm run check",
    "format": "prettier '**/*.{css,html,js,json,md,yml}' --write"
  },
  "devDependencies": {
    "@signal-noise/stylelint-scales": "^2.0.2",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.6",
    "eslint": "^7.30.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-logical": "^4.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-order": "^4.1.0",
    "stylelint-use-logical": "^1.1.0",
    "stylelint-use-nesting": "^3.0.0",
    "tiny-lr": "^2.0.0"
  }
}
